{
  "name": "adventure-crawler",
  "version": "0.1.1.0",
  "private": true,
  "engines": {
    "node": ">20.12.2"
  },
  "packageManager": "pnpm@9.0.6",
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build",
    "start": "node ./build/bin/server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "pretest": "node ace migration:run",
    "test": "node ace test",
    "infra:up": "docker compose up -d",
    "infra:down": "docker compose down -v",
    "typecheck": "tsc --noEmit",
    "psql": "psql --host localhost --username lucid --dbname esc-api"
  },
  "eslintConfig": {
    "extends": [
      "@adonisjs/eslint-config/app"
    ],
    "rules": {
      "@typescript-eslint/explicit-member-accessibility": "off",
      "unicorn/filename-case": "off",
      "@typescript-eslint/no-shadow": "off"
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": "@adonisjs/prettier-config",
  "devDependencies": {
    "@adonisjs/assembler": "^7.4.0",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^  1.3.0",
    "@japa/api-client": "^2.0.3",
    "@japa/expect": "^3.0.2",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/run-failed-tests": "^1.1.0",
    "@japa/runner": "^3.1.2",
    "@japa/spec-reporter": "^1.3.2",
    "@swc/core": "^1.4.11",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.10",
    "@types/proxy-addr": "^2.0.0",
    "@types/sinon": "^17.0.3",
    "@types/source-map-support": "^0.5.6",
    "eslint": "^8.57.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.0",
    "@adonisjs/core": "^6.5.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/limiter": "^2.3.0",
    "@adonisjs/lucid": "^20.5.1",
    "@adonisjs/redis": "^8.0.1",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/validator": "^13.0.2",
    "@adonisjs/vite": "^2.0.2",
    "@faker-js/faker": "^8.4.1",
    "@vinejs/vine": "^2.0.0",
    "edge.js": "^6.0.2",
    "luxon": "^3.4.4",
    "pg": "^8.11.5",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "ts-pattern": "^5.1.1"
  },
  "type": "module",
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#app/*": "./app/*.js",
    "#database/*": "./database/*.js",
    "#contracts/*": "./contracts/*.js"
  }
}
